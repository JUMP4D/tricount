<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dégradé d'arrière-plan en forme ovale -->
    <item>
        <shape
            android:shape="oval">
        </shape>
    </item>
    <!-- Image vectorielle ou PNG centrée -->
    <item android:gravity="center">
        <!-- Si vous utilisez une image PNG -->
        <bitmap
            android:layout_height="wrap_content"
            android:width="70dp"
            android:height="70dp"
            android:gravity="center"
            android:src="@drawable/circleplus" />
    </item>
</layer-list>
